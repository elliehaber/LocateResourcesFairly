file = {:Users/sw160/Library/Application Support/Mendeley Desktop/Downloaded/Bampis, Escoffier, Mladenovic - 2018 - Fair resource allocation over time.pdf:pdf},
journal = {Proceedings of the International Joint Conference on Autonomous Agents and Multiagent Systems, AAMAS},
keywords = {Approximation algorithms,Fairness,On-line algorithms,Resource allocation,Santa claus,Scheduling},
